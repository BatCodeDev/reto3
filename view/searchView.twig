        <img id="{{ product.id }}" src="img/productImg/{{ product.img }}" class="card-img-top" alt="..." {#onclick="modal(this.id)"#}
             data-toggle="modal" data-target="#ProductModal"
             data-id="{{ product.id }}"
             data-name="{{ product.name }}"
             data-prize="{{ product.prize }}"
