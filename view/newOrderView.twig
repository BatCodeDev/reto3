{% extends "genericLayout.twig" %}
{% block content %}
    <div class="row">
        <div class="col-md-8">
            {% set total = 0 %}
            {% for p in cart %}
                <div class="row card d-flex flex-row">
                    <div class="col-md-4">
                        <img class="card-img-top" src="img/productImg/{{ p.img }}" alt="Card image cap">
                    </div>
                    <div class="row col-md-8 card-body align-items-center">
                        <div class="col-md-4">{{ p.name }}</div>
                        <div class="col-md-4">{{ p.quantity }} &times; {{ p.prize }} €</div>
                        <div class="col-md-2">{{ p.quantity * p.prize }} €</div>
                        <div class="col-md-2"><div class="col-md-2">
                                <a href="index.php?controller=Product&action=delete&idProduct={{ p.id }}" class="btn btn-outline-danger"><i class="fas fa-trash"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                {% set total = total + p.quantity * p.prize %}
            {% endfor %}
            <div class="row card d-flex flex-row">
                <div class="col-md-4"></div>
                <div class="row col-md-8 card-body align-items-center">
                    <div class="col-md-4"></div>
                    <div class="col-md-4"><b>Total:</b></div>
                    <div class="col-md-2">{{ total }} €</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <form id="order_form" onsubmit="return ajax_listen(this.id, 'index.php?controller=Order&action=insert', errorCart)">
                <div class="form-group">
                    <label for="name">Nombre</label>
                    <input id="name" name="name" type="text" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="surname">Apellidos</label>
                    <input id="surname" name="surname" type="text" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="tlfo">Telefono</label>
                    <input id="tlfo" name="tlfo" type="text" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input id="email" name="email" type="email" class="form-control" required>
                </div>
                <div class="form-group">
                    <div id="orderMsg" class="alert alert-danger"><i class="fas fa-times-circle"></i> No hay ningun producto seleccionado</div>
                </div>
                <div class="form-group">
                    <a href="index.php?controller=Product&action=toProducts" class="btn btn-outline-primary"><i class="fas fa-arrow-left"></i> Volver</a>
                    <button type="submit" class="btn btn-outline-success"><i class="fas fa-check"></i> Finalizar</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}